host = 127.0.0.1
port = 3000
couchDbBaseUrl = http://admin:secret@localhost:5984
usersDb = _users

; the sign-in link URL scheme
; the value can either be http or https
scheme = http

; whitelist of all hosts that are allowed in the redirect location
; after successful authentication
; if missing or empty any host is allowed
allowedRedirectHosts = 127.0.0.1:5984, localhost:5984, example.com, example.org

; the time in seconds the authentication token
; (which is part of the sign-in link) is valid
tokenExpiryTime = 3600

; the size of the authentication token in bytes
tokenSize = 16

; smtp settings
[smtp]
  port = 25
  host = localhost
  ignoreTLS = true

[email]
  from = couch_email_auth@example.com
  subject = Sign In
  template = default_mail_template
